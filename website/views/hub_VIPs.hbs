<style>
  .animatedText {
    animation: FadeAndScale 7.1s ease-in;
    transform-origin: center bottom;
    padding: 10px;
    margin: 10px;
    border-color: var(--color_2);
    border-width: 1px;
    border-style: solid;
    background-color: var(--color_1);
  }

  @keyframes FadeAndScale {
    0% {
      opacity: 0;
      transform: scale3d(0.5, 0.5, 1);
    }

    20% {
      opacity: 1;
      transform: scale3d(1, 1, 1);
    }

    80% {
      opacity: 1;
      transform: scale3d(1, 1, 1);
    }

    90% {
      opacity: 0;
      transform: scale3d(0.5, 0.5, 1);
    }

    100% {
      opacity: 0;
      transform: scale3d(0.5, 0.5, 1);
    }
  }
</style>
<center>
  <div id="show_subs"></div>
</center>

<script type="text/javascript">
var data = [
  {{#each data.data}}
    { name: "{{name}}", time: {{length_month}} },
  {{/each}}
  ];

  var current_sub = 0;
  function animateSubs() {
    var div = document.getElementById("show_subs");
    div.innerHTML = "<div class='animatedText'><span class='username'>" + data[current_sub].name + "</span> <span class='special'>" + data[current_sub].time + "</span> Monate</div>";

    current_sub++;
    if (current_sub >= data.length) {
      current_sub = 0;
    }
    setTimeout(animateSubs, 7000);
  }
  animateSubs();
</script>